<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tripleaims.exhibition.dao.ArtworkCategoryDAO">
	
	<resultMap type="com.tripleaims.exhibition.dto.ArtworkCategoryDTO" id="artworkCategoryMap">
		<result property="categoryNo" column="CATEGORY_NO"/>
		<result property="name" column="NAME"/>
		<result property="deleteYn" column="DELETE_YN"/>
		<result property="regDate" column="REG_DATE"/>
	</resultMap>
	
	<select id="selectListArtworkCategory" resultMap="artworkCategoryMap" resultType="com.tripleaims.exhibition.dto.ArtworkCategoryDTO">
		 SELECT CATEGORY_NO, NAME, DELETE_YN, REG_DATE FROM ARTWORK_CATEGORY ORDER BY CATEGORY_NO
	</select>
	
</mapper>